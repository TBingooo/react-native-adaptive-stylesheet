{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "sourceMap": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "es7",
    ],
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist"
  },
  "compileOnSave": true,
  "include": [
    "lib",
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}